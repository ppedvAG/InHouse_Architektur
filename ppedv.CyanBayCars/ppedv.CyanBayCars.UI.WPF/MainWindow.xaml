                 Text="{Binding ElementName=tb1,Path=Text,
                        UpdateSourceTrigger=PropertyChanged}"
                 Background="{Binding ElementName=tb1,Path=Text}"/>

    </StackPanel>-->
</controls:AdonisWindow>
